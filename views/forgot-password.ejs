                    <label for="email">Email</label>
                    <input type="text" class="form-control" name="email" id="email">
                  </div>
                  <br>
                  <input type="submit" value="Submit Reset" class="btn btn-pill text-white btn-block btn-primary">
                </form>
              </div>
            </div>
          </div>

        </div>

      </div>
    </div>
  </div>

