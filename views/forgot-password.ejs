        <div class="col-md-6 contents">
          <div class="row justify-content-center">
            <div class="col-md-12">
              <div class="form-block">
                <div>
                  <h3 style="text-align: center;">Recover Password</h3>
                </div>
                <h5 class="error-message"></h5>
                <h5 class="notification"></h5>
                <br>
                <form action="/forgot-password" method="post" class="forgot-password">
